package net.mind_engine.oculus.testrunframework.annotations.events;

import java.lang.annotation.ElementType;
import java.lang.annotation.Retention;
import java.lang.annotation.RetentionPolicy;
import java.lang.annotation.Target;

import net.mind_engine.oculus.testrunframework.events.ActionEvent;



/**
 * This annotation is used on test methods when it is needed to handle test actions
 * You can define the regular expression of actions  which you need to handle 
 * Method should support parameter {@link ActionEvent}
 * @author Ivan Shubin
 *
 */
@Retention(RetentionPolicy.RUNTIME)
@Target(ElementType.METHOD)
public @interface OnEvent
{
    String before() default "";
    String after() default "";
}
